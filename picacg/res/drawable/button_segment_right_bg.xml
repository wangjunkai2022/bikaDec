<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary" />
            <corners android:topRightRadius="@dimen/size_button_segment_corner_radius" android:bottomRightRadius="@dimen/size_button_segment_corner_radius" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background" />
            <corners android:topRightRadius="@dimen/size_button_segment_corner_radius" android:bottomRightRadius="@dimen/size_button_segment_corner_radius" />
            <stroke android:width="@dimen/size_button_segment_stroke" android:color="@color/colorPrimary" />
        </shape>
    </item>
</selector>